<% include partials/header %>
  <div class="container">
    <h1 style="text-align: center;">Post information</h1>
    <div style="margin: 25px auto;">
      <div class="container">
        <p>
          <%= pantipPost.title%>
        </p>
        <p>
          <%= pantipPost.topic%>
        </p>
        <form action="/posts/page/<%= pageId %>/<%= id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input type="radio" name="problemFlag" value="yes" checked> Problem
            <input type="radio" name="problemFlag" value="no"> Not problem
            <br>
          </div>
          <div class="form-group">
            <p>keyword: </p>
            <input class="form-control" type="text" name="keywords" placeholder="separated by comma : k1, k2, k3">
          </div>
          <div class="form-group">
            <input type="radio" name="sentiment" value="1"> Positive
            <input type="radio" name="sentiment" value="0" checked> Neutral
            <input type="radio" name="sentiment" value="-1"> Negative
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
      </div>
      <a href="/posts/page/<%= pageId %>">Go back</a>
    </div>
  </div>
  <% include partials/footer %>
