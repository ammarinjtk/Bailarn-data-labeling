          <h3>
            Company :
            <%= name %>
          </h3>
          <ul>
            <% updated.company_keywords[x].forEach(keyword => { %>
              <li>
                <%= keyword %>
              </li>
              <% }); %>
                <% x++; %>
          </ul>
          <% });%>
            <h3>Sentiment :
              <%= updated.sentiment %>
            </h3>
    </div>
    <a href="/posts/todo/page/1">Go back</a>
  </div>
  <% include partials/footer %>