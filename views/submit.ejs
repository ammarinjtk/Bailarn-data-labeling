<% include partials/header %>
  <div class="container">
    <h1 style="text-align: center;">Submit successfully, thank you!</h1>
    <div class="container">
      <h3>Is_problem :
        <%= updated.is_problem %>
      </h3>
      <h3>Type :
        <%= updated.type %>
      </h3>
      <h3>Type keywords :
        <%= updated.type_keywords %>
      </h3>
      <% var x = 0; %>
